- if proposal.completed
  = Vote.for_or_against(proposal.for)
- else
  = form(:action => url(:controller => :votes, :action => :vote_for, :id => proposal.id, :return_to => :decisions)) do
    = submit "Support"
  = form(:action => url(:controller => :votes, :action => :vote_against, :id => proposal.id, :return_to => :decisions)) do
    = submit "Oppose"