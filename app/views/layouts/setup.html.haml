!!!
%html
  %head
    %title
      One Click Orgs Setup
      
    %link{:href=>"/favicon.ico", :rel=>"shortcut icon"}            
    = stylesheet_link_tag 'one_click'
    = javascript_include_tag 'jquery', 'jquery.scrollTo', 'rails', 'application'
    = yield(:head)
    = csrf_meta_tag
  %body.setup
    %div#container
      %div#doc
        %div#hd
          %h1.header
            = image_tag 'oco-logo-48.png'
            One Click Orgs
        - if flash[:notice]
          %div#notice
            = flash[:notice]
        - if flash[:error]
          %div#error
            = flash[:error]
        
        %div#bd
          = yield
          %div.footer
            = link_to image_tag('oco-logo-24.png', :height => '24', :width => '24') + 'One Click Orgs', 'http://www.oneclickorgs.com/'
            = "#{OneClickOrgs.version}."
            Licensed under the
            %a{:href => 'http://www.gnu.org/licenses/agpl.html'} AGPL.
            %a{:href => 'http://github.com/oneclickorgs/one-click-orgs'} Source code.
      = get_satisfaction_widget
    #lightbox_screen{:style => 'display: none;'}
    #lightbox{:style => 'display: none;'}
      = yield(:lightbox)
    