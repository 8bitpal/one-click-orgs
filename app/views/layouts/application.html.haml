!!!
%html
  %head
    %title
      = @current_organisation ? @current_organisation.organisation_name : "One Click Orgs"

    %link{:href=>"/favicon.ico", :rel=>"shortcut icon"}        
    = stylesheet_link_tag 'one_click'
    = javascript_include_tag 'jquery', 'rails', 'application'
    = csrf_meta_tag
  %body
    %div#container
      %div.control_bar
        - if current_user
          %p
            %strong
              = link_to current_user.name, member_path(current_user)
          %p
            = link_to 'Edit your account', edit_member_path(current_user)
          %p
            = link_to 'Logout', member_session_path, :method => :delete
      %div#doc
        %div#hd
          %h1.header
            = link_to(@current_organisation.organisation_name, root_path)
          %p
            powered by
            = link_to 'One Click Orgs', 'http://www.oneclickorgs.com/'

        - if current_user
          %ul#nav
            %li#navitem= link_to 'Dashboard', root_path
            %li#navitem= link_to 'Settings', settings_path
            %li#navitem= link_to 'Constitution', constitution_path
            %li#navitem= link_to 'Members', members_path

        - if flash[:notice]
          %div#notice
            = flash[:notice]
        - if flash[:error]
          %div#error
            = flash[:error]
        
        %div#bd
          
          = yield
        %div.footer
          = link_to 'One Click Orgs', 'http://www.oneclickorgs.com/'
          = "#{OneClickOrgs.version}."
          Licensed under the
          %a{:href => 'http://www.gnu.org/licenses/agpl.html'} AGPL.
          %a{:href => 'http://github.com/oneclickorgs/one-click-orgs'} Source code.
      = get_satisfaction_widget
