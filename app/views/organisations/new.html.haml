%h2 Set up a new organisation

%div#error
  TODO: Copy for new org page

= form_tag({:controller => 'organisations', :action => 'create'}, :method => "post") do

  %div.left
    %h3 Founder
    = fields_for(:founder, @founder) do |f|
      %p
        = f.label :first_name, "Your first name"
        = f.text_field :first_name, :placeholder => 'Robert'
      %p
        = f.label :last_name, "Your last name"
        = f.text_field :last_name, :placeholder => 'Smith'
      %p
        = f.label :email, "Your email address"
        = f.text_field :email, :type => 'email', :placeholder => 'robert@example.com'
      %p
        = f.label :password, "Choose a password"
        = f.password_field :password
      %p
        = f.label :password_confirmation, "Confirm your password"
        = f.password_field :password_confirmation

  %div.right
    %h3 Organisation
    = fields_for(:organisation, @organisation) do |f|
      %p
        = f.label :name, "Your groupâ€™s name"
        = f.text_field :name
      - if !Setting[:single_organisation_mode]
        %p
          = f.label :subdomain, "Your One Click Orgs web address will be (you can change this before you go to the next step)"
          = f.text_field(:subdomain, :placeholder => 'mygroup') + '.' + Setting[:base_domain]
      %p
        = f.label :objectives, "Your groupâ€™s objectives"
        = f.text_field :objectives
  
      %p
        = submit_tag "Create a draft constitution", :id => 'submit'
  
