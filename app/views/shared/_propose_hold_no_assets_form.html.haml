- if current_user.has_permission(:constitution_proposal)
  =form_tag(:controller => 'proposals', :action => 'create_assets_amendment') do
    %div.constitution_proposal
      %p.reveal_link
        %a{:href => '#'}
          Propose an amendment
      %div.proposal_form{:style => 'display: none;'}
        %p
          Propose that the organisation should <strong>not</strong> be allowed to hold, transfer or dispose of material assets and intangible assets.
        %input{:type => 'hidden', :name => 'new_assets_value', :value => '0'}
        %p
          = submit_tag "Propose change", :id => 'submit'
        %p
          %a{:href => '#', :class => 'cancel_link'}
            Cancel
