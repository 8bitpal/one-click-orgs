%h2 Induction - Members
%h3 Member 1 (that's you)
%p
  %label Name
  = @founder.name
%p
  %label Email
  = @founder.email
= form_tag(:controller => 'induction', :action => 'create_members') do
  - 0.upto(14) do |i|
    = fields_for(:members, @members[i], :index => i) do |f|
      %h3="Member #{i+2}"
      %p
        = f.label(:first_name)
        = f.text_field(:first_name)
      %p
        = f.label(:last_name)
        = f.text_field(:last_name)
      %p
        = f.label(:email)
        = f.text_field(:email)
      - if co.member_classes.count == 1
        = f.hidden_field :member_class_id
      - else
        %p
          = f.label(:class)
          = f.collection_select(:member_class_id, co.member_classes.all, :id, :name)

      = f.hidden_field(:id)
  %p
    = submit_tag("Save members and move on")
%p
  = link_to("Discard changes and go back", :controller => 'induction', :action => 'organisation_details')